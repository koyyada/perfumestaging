<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <enhancedsmtp>
            <general>
                <enabled>1</enabled>
                <log_clear>7</log_clear>
                <warning_message>5</warning_message>
            </general>
            <allowedmodule>
                <order>1</order>
                <customer>1</customer>
                <newsletter>1</newsletter>
                <contactus>1</contactus>
            </allowedmodule>
            <advanced>
                <test_email_from>general</test_email_from>
                <log_email>1</log_email>
                <developermode>0</developermode>
            </advanced>
        </enhancedsmtp>
    </default>
</config>